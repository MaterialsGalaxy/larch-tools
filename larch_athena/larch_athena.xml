                </assert_contents>
            </output>
        </test>
        <!-- 11 -->
        <test expect_num_outputs="1">
            <param name="merge_inputs" value="true"/>
            <param name="dat_file" value="262875_PtSn_OCO_Abu_1.nxs,262876_PtSn_OCO_Abu_2.nxs"/>
