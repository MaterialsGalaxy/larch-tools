        </test>
        <!-- 13: Test merging and plotting multiple prj inputs -->
        <test expect_num_outputs="2">
            <param name="merge_inputs" value="true"/>
            <param name="format" value="athena"/>
            <param name="dat_file" value="test.prj,test.prj"/>
